<h1>New Game</h1>

<div class="container" >
<% @new_game.each do |letters| %>
<h2><%= letters %></h2>
<% end %>
</div>

<h3>What is the longest word that you can find?</h3>

<form action="score">
  <input type="text" name="player_answer">
  <input type="submit" value="Play">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>

